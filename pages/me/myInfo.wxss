/* pages/me/myInfo.wxss */
.page-head{
  width:100%;
  height:100px;
  background-color: #00CDCD;
  z-index:1;
}
.page-head text{
  position:relative;
  left:25px;
  color:white;
  font-weight: 700;
}
.head{
  position:relative;
  top:20px;
  left:150px;
  border-radius: 50%;
  width:120rpx;
  height:120rpx;
  size:cover;
}
.page-body{
  background-color: white;
  z-index:2;
  position:relative;
  top:-20px;
  width:100%;
  border-radius:20px;
}
.page-data{
  position:relative;
  left:5%;
  top:50px;
  width:90%;
  height:280px;
  background-color: #F5F5F5;
  border-radius: 10px;
  box-shadow: #DCDCDC 2px 2px 0px 0px;
  padding-top:5px;
}
.data-item{
  position:relative;
  margin:20px;
}
.data-item text{
  position:relative;
  top:-5.5px;
  width:50px;
  color:grey;
  font-size:35rpx;
}
.data-item input{
  position:absolute;
  left:90px;
  display: inline-block;
  font-size: 35rpx;
  color:grey;
  text-align:right;
}
.data-item input ::placeholder{
  text-align:right;
}
.genderbox{
  display:inline-block;
  position:absolute;
  top:-8px;
  left:158px;
  padding:0;
}
radio {
  color:grey;
  transform: scale(0.8);
}

radio .wx-radio-input.wx-radio-input-checked {
  /* border: none; */
  border-color: gray !important;
  /* background-color: #fff!important; *//* background-color: transparent!important; *//* 居中 *//* 
  display: flex;
  justify-content: center;
  align-items: center;
  */
}
radio .wx-radio-input.wx-radio-input-checked::before {
  /* 去除对号 */
  content: '';
  width: 18px;
  height: 18px;
  border-radius: 50%;
  /* background: red; */
  background-color: gray;
  /* 居中 *//* margin-top: 0rpx; *//* display: flex; *//* position: relative; */
}
.line{
  width:100%;
  height:1px;
  background-color: grey;
}
.savedata{
  position:relative;
  top:60px;
  border-radius: 210px;
  background-color: #00CDCD;
  color:white;
}