/* pages/ticketpurchase/ticket.wxss */
.container{
  width:100%;
  height:800px;
}
.content{
   position:relative;
}
.pic{
  width:100%;
  height:200px;
}
.showprice{
  position:absolute;
  bottom:-185px;
  width:100%;
  height:500px;
  border-top-left-radius:20px;
  border-top-right-radius:20px;
  background-color: white;
  border-top:2px solid rgb(218, 213, 213);
  z-index:11;
}
.bottom{
  width:100%;
  height:50px;
  position:fixed;
  bottom:0px;
  z-index:12;
  background-color:white;
  
  border:2px solid rgb(228, 223, 223);
}
.tab{
      float:left;
      width:40%;
      text-align:center;
      padding:40rpx 0;
      margin-left:30px;
}
.topTapSwiper{
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
.tabBorer {
  border-bottom: 1px solid #f00;
  color: #f00;
}
.swiper{
  width:100%;

  height:500px;

}
.swiper_con{
  text-align: center;
  width: 100%;
  /**
  height: auto;
  */
  height:550px;
  padding: 80rpx 0;
  position:relative;
  
}
.swiper_con:first-child view{
   margin-bottom:13px;
}
.showtickets{
    height: 40px;
    font-weight: bold;
    font-size:20;
    text-align:left;
    background:rgb(247, 202, 120);
    padding-left: 13px;
    padding-top:3px;
    border-radius: 15px;
}
.content{
   border:1px solid grey;
   margin-top:2px;
   height:60px;
   position:relative;
}
.desc{
   border:1px solid rgb(247, 225, 185);
   font-size:14px;
   color:rgb(241, 184, 78);
   float:left;
   margin-left:3px;
   margin-top:4px;
}
.desc1{
   margin-top:8px;
   float:left;
}
.desc2{
  margin-right:5px;
  margin-left:5px;
}
.desc3{
  position:absolute;
  bottom:50px;
  width:100%;
}
.desc4{
   position:absolute;
   bottom:180px;
   width:100%;
}
.desc5{
  position:absolute;
  bottom:310px;
  width:100%;
}
.function{
  color:rgb(243, 205, 79);
  font-size:14px;
  left:13px;
  bottom:-6px;
  float:left;
  clear:left;
  position:absolute;
}
.num{
   height:30px;
   width:30%;
   right:3px;
   bottom:-5px;
   position:absolute;
}
.desc6{
    margin-top:3px;
}
.images{
   margin-top:5px;
   margin-left:30px;
   display: inline-block;
  
}
.images text{
 margin-top:-6px;
 margin-left:6px;
}
.count{
  float:right;
  font-weight:black;
  font-size:15px;
  margin-top:15px;
  margin-right:30px;
}
.remind{
    float:left;
    margin-left:90px;
    margin-top:-20px;
}
.date{
  margin-top:50px;
}
.day{
     height:40px;
     width:25%;
     border-radius:10px;
     background-color: white;
     border:1px solid rgb(207, 201, 201);
     float:left;
     margin-left:3px;
     margin-top:-40px;
     padding-top:5px;

}
.moredate{
   margin-left:3px;
   height:35px;
   width:10%;
   border:1px solid rgb(207, 201, 201);
   border-radius: 5px;
   float:left;
   margin-top:-40px;
   padding-left:10px;
   padding-right:10px;
   padding-top:5px;
}
.day text{
     font-size:13px;
}
.sure{
   height:40px;
   width:70px;
   background-color: grey;
   border-radius: 15px;
   float:right;
   margin-top:6px;
   margin-right:10px;
}
.sure text{
   margin-left:20px;
   margin-top:10px;
}
